@model DiscussionForum.Models.Discussion

<h2>@Model.Title</h2>
<p>@Model.Content</p>

<h3>Comments</h3>
<ul>
    @foreach (var comment in Model.Comments)
    {
        <li>@comment.Content - @comment.CreatedAt</li>
    }
</ul>

<h3>Add a Comment</h3>
<form method="post" action="@Url.Action("AddComment", "Comment")">
    <input type="hidden" name="discussionId" value="@Model.Id" />
    <textarea name="content" required></textarea>
    <button type="submit">Add Comment</button>
</form>
